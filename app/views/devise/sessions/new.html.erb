
<div class="col-sm-6 centro" style="margin-top: 10%;">
  <div class="featured-box mt-xlg login-box">
	<div class="box-content">
  		  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
  			<form action="/" id="frmSignIn" method="post">
  				<div class="row">
  					<div class="form-group">
  						<div class="col-md-12">
  							<div style="width: 100%; vertical-align: middle;">
	  							<a style="font-weight: bold; font-size: 18px; color: #119cd8">E-MAIL</a>
	  							<%= f.email_field :email, :autofocus => true, class: 'input-lg', style: 'width: 80%;'%>	
  							</div>
  						</div>
  					</div>
  					
  				</div>
  				<div class="row">
  					<div class="form-group">
  						<div class="col-md-12">
  							<div style="width: 100%; vertical-align: middle;">
  								<a style="font-weight: bold; font-size: 18px; color: #119cd8;">SENHA</a> 
  								<%= f.password_field :password, class: 'input-lg', style: 'width: 80%;'%>
  							</div>
  						</div>
  					</div>
  				</div>
  				<div>
  					<input type="submit" value="ENTRAR" class="btn btn-primary" data-loading-text="Aguarde...">	
  				</div>
  				<div class="modal-footer">
  					<div class="row">
	  					<div class="col-md-6">
	  						<span class="remember-box checkbox">
	  							<div style="float: left;">
		  							<label for="rememberme">
		  								<%= f.check_box :remember_me %> Lembrar-me
		  							</label>
	  							</div>
	  						</span>
		  				</div>
	  				</div>
  					<div class="row">
  						<div class="form-group">
	  						<div class="col-md-12">
	  							<div style="float: left;">
	  								<%- if devise_mapping.recoverable? %>
			  							<%= link_to "Recuperar Senha?", new_password_path(resource_name)%></a>
			  						<% end %>
			  				
	  							</div>
	  						</div>
	  					</div>
	  				</div>
		</div>
  		</form>
  		<% end %>
  	</div>
</div>
  </div>